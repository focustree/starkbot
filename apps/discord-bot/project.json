{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/discord-bot/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/node:webpack",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/discord-bot",
        "main": "apps/discord-bot/src/index.ts",
        "tsConfig": "apps/discord-bot/tsconfig.app.json",
        "assets": ["apps/discord-bot/src/assets"]
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false,
          "fileReplacements": [
            {
              "replace": "apps/discord-bot/src/environments/environment.ts",
              "with": "apps/discord-bot/src/environments/environment.prod.ts"
            }
          ]
        }
      }
    },
    "start": {
      "executor": "@nrwl/node:node",
      "options": {
        "buildTarget": "discord-bot:build"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/discord-bot/**/*.ts"]
      }
    },
    "docker-build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "docker build --build-arg ECR_REPO=$AWS_ACCOUNT_NUMBER.dkr.ecr.$AWS_REGION.amazonaws.com/$AWS_BASE_ECR --no-cache -f ./apps/discord-bot/Dockerfile -t $AWS_ACCOUNT_NUMBER.dkr.ecr.$AWS_REGION.amazonaws.com/$AWS_PRINCIPAL_ECR ."
        ]
      }
    },
    "docker-push-raw": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "docker push $AWS_ACCOUNT_NUMBER.dkr.ecr.$AWS_REGION.amazonaws.com/$AWS_PRINCIPAL_ECR"
        ]
      }
    },
    "docker-tag": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "docker tag $AWS_ACCOUNT_NUMBER.dkr.ecr.$AWS_REGION.amazonaws.com/$AWS_PRINCIPAL_ECR $AWS_ACCOUNT_NUMBER.dkr.ecr.$AWS_REGION.amazonaws.com/$AWS_PRINCIPAL_ECR:$(git rev-parse --short HEAD)"
        ]
      }
    },
    "docker-push": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "docker push $AWS_ACCOUNT_NUMBER.dkr.ecr.$AWS_REGION.amazonaws.com/$AWS_PRINCIPAL_ECR:$(git rev-parse --short HEAD)"
        ]
      }
    },
    "docker-run": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "docker run -d --env-file .env $AWS_ACCOUNT_NUMBER.dkr.ecr.$AWS_REGION.amazonaws.com/$AWS_PRINCIPAL_ECR"
        ]
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx run discord-bot:docker-build",
          "nx run discord-bot:docker-push-raw",
          "nx run discord-bot:docker-tag",
          "nx run discord-bot:docker-push"
        ],
        "parallel": false
      }
    },
    "login-ecr": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "aws ecr get-login-password --region $AWS_REGION --profile $AWS_PROFILE | docker login --username AWS --password-stdin $AWS_ACCOUNT_NUMBER.dkr.ecr.$AWS_REGION.amazonaws.com"
        ]
      }
    },
    "docker-deploy-base": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "docker build -f base.dockerfile -t $AWS_ACCOUNT_NUMBER.dkr.ecr.$AWS_REGION.amazonaws.com/$AWS_BASE_ECR . ",
          "docker push $AWS_ACCOUNT_NUMBER.dkr.ecr.$AWS_REGION.amazonaws.com/$AWS_BASE_ECR",
          "docker tag $AWS_ACCOUNT_NUMBER.dkr.ecr.$AWS_REGION.amazonaws.com/$AWS_BASE_ECR $AWS_ACCOUNT_NUMBER.dkr.ecr.$AWS_REGION.amazonaws.com/$AWS_BASE_ECR:$(git rev-parse --short HEAD)",
          "docker push $AWS_ACCOUNT_NUMBER.dkr.ecr.$AWS_REGION.amazonaws.com/$AWS_BASE_ECR:$(git rev-parse --short HEAD)"
        ],
        "parallel": false
      }
    }
  },
  "tags": []
}
