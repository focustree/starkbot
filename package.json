{
  "name": "starkbot",
  "version": "0.0.0",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=18",
    "pnpm": "7"
  },
  "ecr": "071785475400.dkr.ecr.eu-west-3.amazonaws.com/starkbot-base-repository",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "nx run-many --target start --projects firebase,discord-bot --parallel --output-style stream",
    "infra": "nx run-many --target start --projects stack,kube --parallel --output-style stream",
    "dev:bot": "nx start discord-bot",
    "dev:firebase": "nx start firebase",
    "infra:deploy": "nx start stack",
    "kube:deploy": "nx start kube",
    "kube:clean": "nx delete kube",
    "docker:build:base": "pnpm fetch-ecr && docker build -f base.dockerfile -t ${npm_package_ecr} . ",
    "docker:push:base:latest": "docker push ${npm_package_ecr}",
    "docker:tag:base": "docker tag ${npm_package_ecr} ${npm_package_ecr}:$(git rev-parse --short HEAD)",
    "docker:push:base:tagged": "docker push ${npm_package_ecr}:$(git rev-parse --short HEAD)",
    "docker:deploy:base": "pnpm docker:build:base && pnpm docker:push:base:latest && pnpm docker:tag:base && pnpm docker:push:base:tagged"
  },
  "dependencies": {
    "async-mutex": "^0.3.2",
    "axios": "^0.27.2",
    "discord.js": "^14.3.0",
    "dotenv": "^16.0.2",
    "firebase": "^9.8.4",
    "starknet": "^3.16.1",
    "winston": "^3.8.2",
    "aws-cdk-lib": "2.39.1",
    "source-map-support": "^0.5.21",
    "cdk8s": "^2.5.18",
    "cdk8s-plus-22": "^2.0.0-rc.152",
    "constructs": "^10.1.131"
  },
  "devDependencies": {
    "@nrwl/cli": "14.4.0",
    "@nrwl/eslint-plugin-nx": "14.4.0",
    "@nrwl/linter": "14.4.0",
    "@nrwl/node": "^14.4.0",
    "@nrwl/nx-cloud": "latest",
    "@nrwl/workspace": "14.4.0",
    "@types/node": "16.11.7",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "eslint": "~8.15.0",
    "eslint-config-prettier": "8.1.0",
    "firebase-tools": "^11.2.0",
    "nx": "14.4.0",
    "prettier": "^2.6.2",
    "tslib": "^2.4.0",
    "jest": "^27.5.1",
    "ts-jest": "^27.1.4",
    "aws-cdk": "2.39.1",
    "ts-node": "^10.9.1",
    "cdk8s-cli": "^2.1.21",
    "typescript": "^4.8.4"
  }
}
